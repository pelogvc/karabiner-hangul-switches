            "modifiers": { "optional": ["caps_lock"] }
          },
          "to": [
            {
              "key_code": "right_command",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_control", "left_option"]
            },
            {
              "key_code": "spacebar",
              "modifiers": ["left_control", "left_option"]
            }
          ]
        }
