    {
      "description": "R_Option -> 한자/특수문자",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "com.parallels.desktop",
                "com.parallels.vm",
